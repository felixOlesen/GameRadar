= form_for @forum do |f|
  - if @forum.errors.any?
    #error_explanation
      %h2= "#{pluralize(@forum.errors.count, t("home.error"))}" + t("games.prohibited")
      %ul
        - @forum.errors.full_messages.each do |message|
          %li= message
          
  .field
    = f.label :game
    %p= @forum.game.name
    = f.hidden_field :game_id, value: @forum.game.id
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :entry
    = f.text_area :entry
  .actions
    = f.submit t("games.save")
